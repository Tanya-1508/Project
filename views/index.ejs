        <div class="card-body">
          <h4 class="card-title mb-3">Your Stats</h4>
          <h2 class="font-light">Total Secrets: <%= secretCount %></h2>
          <div class="mt-4">
            <div class="row text-center">
              <div class="col-6 border-end">
                <h4><%= newSecretsThisWeek %></h4>
                <span class="text-muted">This Week</span>
              </div>
              <div class="col-6">
                <h4><%= lastSecretDate %></h4>
