  <div class="row">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <h4 class="card-title">Welcome, <%= user.name %> ðŸ‘‹</h4>
          <p class="text-muted">Start by adding a new secret below. Everything stays private to you.</p>
          <form action="/add_secret" method="POST">
            <div class="mb-3">
              <textarea class="form-control" name="secret" rows="4" placeholder="Write your secret here..." required></textarea>
            </div>
            <div class="text-end">
              <button type="submit" class="btn btn-primary">Add Secret</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- User Stats Card -->
    <div class="col-lg-4">
