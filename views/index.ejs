              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- ============================================================== -->
  <!-- Latest Secrets Table -->
  <!-- ============================================================== -->
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <h4 class="card-title">Your Recent Secrets</h4>
        </div>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Secret</th>
                <th>Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (secrets.length === 0) { %>
                <tr>
                  <td colspan="3" class="text-center text-muted">You haven't added any secrets yet.</td>
                </tr>
              <% } else { %>
                <% secrets.forEach(secret => { %>
                  <tr>
                    <td><%= secret.text.length > 50 ? secret.text.slice(0, 50) + '...' : secret.text %></td>
                    <td><%= new Date(secret.createdAt).toLocaleDateString() %></td>
                    <td>
                      <a href="/edit_secret/<%= secret._id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                      <form action="/delete_secret/<%= secret._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this secret?')">Burn</button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
